# 1inch Unite Hackathon - Cross-Chain Bridge Deployment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# ETHEREUM SEPOLIA TESTNET
# =============================================================================

# Ethereum RPC URL (get from Infura, Alchemy, or QuickNode)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private key for deployment account (should have Sepolia ETH)
ETHEREUM_PRIVATE_KEY=xxx

# Optional: Etherscan API key for contract verification
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# =============================================================================
# NEAR TESTNET
# =============================================================================

# Near testnet account ID (create at https://wallet.testnet.near.org)
NEAR_ACCOUNT_ID=your-account.testnet

# Near private key (from wallet export or near CLI)
NEAR_PRIVATE_KEY=ed25519:1234567890123456789012345678901234567890123456789012345678901234

# Near network ID (testnet)
NEAR_NETWORK_ID=testnet

# Near node URL
NEAR_NODE_URL=https://rpc.testnet.near.org

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Safety deposit amounts
ETHEREUM_SAFETY_DEPOSIT_ETH=0.01  # 0.01 ETH for testing
NEAR_SAFETY_DEPOSIT_NEAR=1.0      # 1 NEAR for testing

# Default timelock duration (in seconds)
DEFAULT_TIMELOCK_DURATION=3600     # 1 hour for testing

# Gas limits
ETHEREUM_GAS_LIMIT=500000
NEAR_GAS_LIMIT=300000000000000     # 300 TGas

# =============================================================================
# DEMO CONFIGURATION
# =============================================================================

# Demo token addresses (testnet)
ETHEREUM_DEMO_TOKEN=0x7169D38820dfd117C3FA1f22a697dBA58d90BA06  # USDT Sepolia
NEAR_DEMO_TOKEN=usdt.fakes.testnet

# Demo amounts for testing
DEMO_SWAP_AMOUNT_ETH=1000000000000000000  # 1 ETH equivalent
DEMO_SWAP_AMOUNT_NEAR=1000000             # 1 USDT equivalent

# =============================================================================
# API KEYS & SERVICES
# =============================================================================

# 1inch API key (provided in hackathon)
ONEINCH_API_KEY=JlJDPEHkMweaDn0I9fXOW1pNGywAJ3Sa

# Optional: Web3 storage for metadata
WEB3_STORAGE_TOKEN=YOUR_WEB3_STORAGE_TOKEN

# Optional: Pinata for IPFS
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Enable verbose logging
DEBUG=true

# Test mode (uses smaller amounts and shorter timelocks)
TEST_MODE=true

# Demo UI port
DEMO_UI_PORT=3000
